{% layout "server/layouts/base.liquid" %}

{% block content %}
<h1>Je favorieten</h1>
{% comment %} 
<ul class="favorites-list">
  {% if favorites.length == 0 %}
    <p>Je hebt nog geen favorieten.</p>
  {% else %}
    {% for book in favorites %}
      <li>
 
        <h3>{{ book.title }}</h3>


        <!-- Verwijderknop -->
        <form action="/favorites/delete/{{ book.id }}" method="POST" style="margin-top: 10px;">
          <button type="submit">🗑️ Verwijder</button>
        </form>
      </li>
    {% endfor %}
  {% endif %}
</ul> {% endcomment %}

<div class="bookcase">
  <!-- Eerste plank -->
  <div class="shelf">
    {% if favorites.length == 0 %}
      <p>Je hebt nog geen favorieten.</p>
    {% else %}
      {% for book in favorites %}
        <div class="book">
          <a href="/book/{{ book.id }}" class="book-link">
            <div class="book-title-shelf">
              <h3>{{ book.title }}</h3>
            </div>
          </a>
          <form action="/favorites/delete/{{ book.id }}" method="POST">
            <button type="submit" class="delete-btn">🗑️</button>
          </form>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  <!-- Tweede plank -->
  <div class="shelf">
    {% if favorites.length == 0 %}
      <p>Je hebt nog geen favorieten.</p>
    {% else %}
      {% for book in favorites %}
        <div class="book">
          <a href="/book/{{ book.id }}" class="book-link">
            <div class="book-title-shelf">
              <h3>{{ book.title }}</h3>
            </div>
          </a>
          <form action="/favorites/delete/{{ book.id }}" method="POST">
            <button type="submit" class="delete-btn">🗑️</button>
          </form>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  <!-- Derde plank -->
  <div class="shelf">
    {% if favorites.length == 0 %}
      <p>Je hebt nog geen favorieten.</p>
    {% else %}
      {% for book in favorites %}
        <div class="book">
          <a href="/book/{{ book.id }}" class="book-link">
            <div class="book-title-shelf">
              <h3>{{ book.title }}</h3>
            </div>
          </a>
          {% comment %} <form action="/favorites/delete/{{ book.id }}" method="POST">
            <button type="submit" class="delete-btn">🗑️</button>
          </form> {% endcomment %}
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>


{% endblock %}
