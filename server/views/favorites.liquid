{% layout "server/layouts/base.liquid" %}

{% block content %}
<h1>Je favorieten</h1>

<ul class="favorites-list">
  {% if favorites.length == 0 %}
    <p>Je hebt nog geen favorieten.</p>
  {% else %}
    {% for book in favorites %}
      <li>
 
        <h3>{{ book.title }}</h3>
        <p>{{ book.authors | join: ', ' }}</p>

        <!-- Verwijderknop -->
        <form action="/favorites/delete/{{ book.id }}" method="POST" style="margin-top: 10px;">
          <button type="submit">🗑️ Verwijder</button>
        </form>
      </li>
    {% endfor %}
  {% endif %}
</ul>
{% endblock %}
