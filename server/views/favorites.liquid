{% layout "server/layouts/base.liquid" %}

{% block content %}
<div class="favorite-content">
  <a href="http://localhost:3000/" class="back-button-favorites">‚Üê Terug naar Home</a>
<h1>Your favorites</h1>
{% comment %} 
<ul class="favorites-list">
  {% if favorites.length == 0 %}
    <p>Je hebt nog geen favorieten.</p>
  {% else %}
    {% for book in favorites %}
      <li>
 
        <h3>{{ book.title }}</h3>


        <!-- Verwijderknop -->
        <form action="/favorites/delete/{{ book.id }}" method="POST" style="margin-top: 10px;">
          <button type="submit">üóëÔ∏è Verwijder</button>
        </form>
      </li>
    {% endfor %}
  {% endif %}
</ul> {% endcomment %}

<div class="bookcase">
  <!-- Eerste plank -->
  <div class="shelf">
    {% if favorites.length == 0 %}
      <p>Je hebt nog geen favorieten.</p>
    {% else %}
      {% for book in favorites %}
        <div class="book">
          <a href="/book/{{ book.id }}" class="book-link">
            <div class="book-title-shelf">
              <h3>{{ book.title }}</h3>
            </div>
          </a>
          <form action="/favorites/delete/{{ book.id }}" method="POST">
           <button type="submit" class="delete-btn" aria-label="Verwijderen">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="20" height="20"
                 fill="none"
                 stroke="var(--dark-blue)"
                 stroke-width="1.5"
                 stroke-linecap="round"
                 stroke-linejoin="round"
                 viewBox="0 0 24 24">
              <!-- Deksel -->
              <rect x="4" y="3" width="16" height="4" rx="1"/>
              <!-- Body van de prullenbak -->
              <rect x="6" y="7" width="12" height="14" rx="2"/>
              <!-- Pennenbakken/openingen -->
              <line x1="10" y1="11" x2="10" y2="17"/>
              <line x1="14" y1="11" x2="14" y2="17"/>
            </svg>
          </button>
          </form>
        </div>
