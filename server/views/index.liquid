{% layout "server/layouts/base.liquid" %}

{% block content %}
  <h1>{{ title }}</h1>

  <!-- ðŸ” Zoekformulier -->
  <form method="GET" action="/">
    <input type="text" name="query" value="{{ query }}" placeholder="Zoek naar boeken..." />
    <button type="submit">Zoek</button>
  </form>

  <!-- ðŸ“š Boekenlijst -->
  {% if books and books.size > 0 %}
    <ul class="books-grid">
      {% for book in books %}
        <li>
          <h2>{{ book.title }}</h2>
          <p>Auteur: {% if book.authors %}{{ book.authors | join: ', ' }}{% else %}Onbekend{% endif %}</p>
          {% if book.thumbnail %}
            <img src="{{ book.thumbnail }}" alt="Boekcover van {{ book.title }}" width="150">
          {% endif %}
          <p>Rating: {{ book.rating }}</p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Geen boeken gevonden voor "{{ query }}".</p>
  {% endif %}
{% endblock %}

